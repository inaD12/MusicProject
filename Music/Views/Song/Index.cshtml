@using Music.Data.DataModels;
@using Music.Services.ViewModels;
@using System.Text;
@model List<Song>

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Song List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Song" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-square"></i> &nbsp; Create New Song
			</a>
		</div>
	</div>
	<br /><br />

<table class="table table-hover">
	<thead>
		<tr>
				<th scope="col">
					Song Title
			</th>
				<th scope="col">
				Song ID
			</th>
			<th scope="col">
				Genre
			</th>
				<th scope="col">
					Length
				</th>
				<th scope="col">
					Artist
				</th>
				<th scope="col">
					Release Year
				</th>
				<th scope="col">
					Song Language
				</th>
				<th scope="col">
					Album
				</th>
				<th></th>



			</tr>
	</thead>
	<tbody>
		@foreach(var obj in Model)
		{
						
				<tr class="table-active">
				<td> 
					@obj.Title
				</td>
				<td>
					@obj.Id
				</td>
				<td>
					@obj.Ganre
				</td>
				<td>
					@obj.Length
				</td>
					<td>
						@obj.Artist.StageName
					</td>
					<td>
						@obj.ReleaseYear
					</td>
					<td>
						@obj.SongLanguage
					</td>
					<td>
						@obj.Album.Title
					</td>
					<td>
						<div class="w-75 btn-group" roll="group">
							<a asp-controller="Song" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
						</div>
					</td>
			</tr>
		}
	</tbody>
</table>
</div>
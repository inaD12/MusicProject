@using Music.Services.ViewModels;
@model SongViewModel

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Song</h2>
			<hr />
		</div>
		@*<div class="mb-3">
			<label asp-for="Id"></label>
			<input asp-for="Id" class="form-control" />
		</div>*@
		<div class="mb-3">
			<label asp-for="Title"></label>
			<input asp-for="Title" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Ganre">Genre</label>
			<input asp-for="Ganre" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Album.Title">Album Title</label>
			<input asp-for="Album.Title" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Length"></label>
			<input asp-for="Length" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Artist.StageName">Artist</label>
			<input asp-for="Artist.StageName" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="ReleaseYear">Release Year</label>
			<input asp-for="ReleaseYear" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="SongLanguage">Song Launguage</label>
			<input asp-for="SongLanguage" class="form-control" />
		</div>

		<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
		<a asp-controller="Song" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back To List
		</a>	
	</div>
</form>
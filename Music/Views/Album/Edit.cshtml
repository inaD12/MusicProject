@using Music.Services.ViewModels;
@using System.Web;
@model AlbumViewModel

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Album</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Title"></label>
			<input asp-for="Title" class="form-control" />
			<span asp-validation-for="Title" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="TotalTracks"></label>
			<input asp-for="TotalTracks" class="form-control" />
			<span asp-validation-for="TotalTracks" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="RelaseYear"></label>
			<input asp-for="RelaseYear" class="form-control" />
			<span asp-validation-for="RelaseYear" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Label"></label>
			<input asp-for="Label" class="form-control" />
			<span asp-validation-for="Label" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="ArtistName"></label>
			<input asp-for="ArtistName" class="form-control" />
			<span asp-validation-for="ArtistName" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary" style="width:150px">Update</button>
		<a asp-controller="Album" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back To List
		</a>	
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}


}